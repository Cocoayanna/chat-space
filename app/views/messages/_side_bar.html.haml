.side-bar
  .side-bar__top
    .side-bar__top__name
      = current_user.name
      %ul.side-bar__top__name__icon
        %li.side-bar__top__name-edit
          =link_to new_group_path do
            =icon('fas', 'edit', class: 'icon')
        %li.side-bar__top__name-setting
          =link_to edit_user_path(current_user) do
            =icon('fas', 'cog', class: 'icon')
  .side-bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
